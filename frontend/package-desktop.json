{
  "name": "it-hero-desktop",
  "version": "1.0.0",
  "description": "IT Hero Security & Diagnostic Toolkit - Desktop Application",
  "author": "IT Hero Team",
  "main": "electron-main.js",
  "scripts": {
    "electron": "electron .",
    "electron-pack": "electron-builder",
    "build-desktop": "yarn build && electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.ithero.security-toolkit",
    "productName": "IT Hero",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron-main.js",
      "preload.js",
      "node_modules/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "get-intrinsic": "^1.2.4",
    "side-channel": "^1.0.6",
    "side-channel-map": "^1.0.1",
    "qs": "^6.12.0"
  }
}